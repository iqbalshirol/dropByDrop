<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.hackathon.dropbydrop.activities.DonateActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.hackathon.dropbydrop.utils.MapWrapperLayout
            android:id="@+id/wrapperlayout_stop_details_map"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_alignParentLeft="true"
            android:visibility="visible" >

            <com.google.android.gms.maps.MapView
                android:id="@+id/stop_details_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true" >
            </com.google.android.gms.maps.MapView>
        </com.hackathon.dropbydrop.utils.MapWrapperLayout>

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/header_layout"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <com.hackathon.dropbydrop.reusable.CustomTextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/wrapperlayout_stop_details_map"
            android:layout_marginLeft="15dp"
            android:text="Location"
            android:textColor="@color/login_username"
            android:textSize="@dimen/text_normal_size"
            app:font="@string/avenir_book" />

        <com.hackathon.dropbydrop.reusable.CustomEditText
            android:id="@+id/et_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_location"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableRight="@mipmap/search"
            android:textSize="@dimen/text_normal_size"
            app:font="@string/avenir_book" />

        <com.hackathon.dropbydrop.reusable.CustomTextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_location"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Date"
            android:textColor="@color/login_username"
            android:textSize="@dimen/text_normal_size"
            app:font="@string/avenir_book" />

        <com.hackathon.dropbydrop.reusable.CustomEditText
            android:id="@+id/et_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_date"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Date"
            android:textSize="@dimen/text_normal_size"
            app:font="@string/avenir_book" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_date"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.hackathon.dropbydrop.reusable.CustomTextView
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_usernmae"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:text="From"
                    android:textColor="@color/login_username"
                    android:textSize="@dimen/text_normal_size"
                    app:font="@string/avenir_book" />

                <com.hackathon.dropbydrop.reusable.CustomEditText
                    android:id="@+id/from_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_pwd"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="From date"
                    android:textSize="@dimen/text_normal_size"
                    app:font="@string/avenir_book" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.hackathon.dropbydrop.reusable.CustomTextView
                    android:id="@+id/tv_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_usernmae"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:text="To"
                    android:textColor="@color/login_username"
                    android:textSize="@dimen/text_normal_size"
                    app:font="@string/avenir_book" />

                <com.hackathon.dropbydrop.reusable.CustomEditText
                    android:id="@+id/to_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_pwd"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="To date"
                    android:textSize="@dimen/text_normal_size"
                    app:font="@string/avenir_book" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conform"
            android:id="@+id/conform"
            android:background="@color/color_D13C3C"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />



    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>